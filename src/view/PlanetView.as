package view {		import flash.display.MovieClip;	import model.Planet;	import model.ViewPort;	import flash.geom.ColorTransform;		public class PlanetView extends MovieClip {				private static var noAffectColorTransform = new ColorTransform(0, 0, 0);		private static var affectColorTransform = new ColorTransform(0, 0, 1);		//private static var collidingColorTransform = new ColorTransform(0, 1, 0);				private var planetModel: Planet;				public function PlanetView(planetModel: Planet) {			this.planetModel = planetModel;			this.planet.width = this.planet.height = planetModel.radius * 2;			this.orbit.width = this.orbit.height = 2* Math.sqrt(80 * planetModel.mass);		}				public function update(viewPort: ViewPort): void {			this.x = this.planetModel.x - viewPort.x;			this.y = this.planetModel.y - viewPort.y;			this.planet.transform.colorTransform = (planetModel.havingAffect ? affectColorTransform : noAffectColorTransform);			//this.planet.transform.colorTransform = (planetModel.colliding ? collidingColorTransform : this.planet.transform.colorTransform);		}	}	}