package view {		import flash.display.MovieClip;	import model.Ball;	import model.ViewPort;		public class BallView extends MovieClip {				private var ball: Ball;				public function BallView(ball: Ball) {			this.ball = ball;			this.width = this.height = ball.radius * 2;		}				public function update(viewPort: ViewPort): void {			this.x = this.ball.x - viewPort.x;			this.y = this.ball.y - viewPort.y;		}	}	}