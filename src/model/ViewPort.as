package model {		public class ViewPort {		public var x: Number;		public var y: Number;				public var width: Number;		public var height: Number;		public function ViewPort(width: Number, height: Number) {			this.width = width;			this.height = height;		}				public function update(x: Number, y: Number): void {			this.x = x - (this.width / 2);			this.y = y - (this.height / 2);						this.x = Math.max(0, this.x);			this.y = Math.max(0, this.y);						this.x = Math.min(this.x, 2048 - this.width);			this.y = Math.min(this.y, 2048 - this.height);		}	}	}