package  {		import flash.display.MovieClip;	import model.Planet;	import model.ViewPort;		public class PlanetView extends MovieClip {				private var planet: Planet;				public function PlanetView(planet: Planet) {			this.planet = planet;			this.width = this.height = planet.radius * 2;			this.alpha = planet.gravity / 1;		}				public function update(viewPort: ViewPort): void {			this.x = this.planet.x - viewPort.x;			this.y = this.planet.y - viewPort.y;		}	}	}